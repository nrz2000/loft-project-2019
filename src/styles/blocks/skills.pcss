.skills {
  padding: 262px 0 150px 0;
  @include desktopHd {
    padding-top: 190px;
    padding-bottom: 136px;
  }
  @include desktop {
    padding-top: 155px;
    padding-bottom: 100px;
  }
  &__title {
    font-weight: 700;
    font-size: 30px;
    color: #0a001d;
    @include desktop {
      width: 88%;
      margin-left: 9%;
    }
  }
  &__subtitle {
    margin-top: 47px;
    color: #0a001d;
    line-height: 30px;
    @include desktopHd {
      margin-top: 48px;
    }
    @include desktop {
      margin-top: 5px;
    }
  }
  &__top {
    width: 40%;
    margin-left: 34%;
    @include desktopHd {
      width: 51%;
      margin-left: 26%;
    }
    @include desktop {
      width: 65%;
      margin-left: 16%;
      text-align: center;
    }
  }
  &__bottom {
    display: flex;
    justify-content: space-between;
    margin-top: 84px;
    @include desktop {
      flex-direction: column;
      margin-top: 35px;
      text-align: center;
    }
  }
  &__img {
    position: relative;
    flex-basis: 32%;
    @include desktop {
      order: 1;
      flex-basis: 100%;
      margin-top: 56px;
    }
  }
  &__metrics {
    flex-basis: 58%;
    @include desktopHd {
      flex-basis: 66%;
    }
    @include desktop {
      order: -1;
      flex-basis: 100%;
    }
  }
  &__guitar {
    position: absolute;
    bottom: 120px;
    right: 0;
    width: 548px;
    height: 1223px;
    @include desktopHd {
      bottom: 90px;
      height: 900px;
      object-fit: contain;
    }
    @include desktop {
      position: relative;
      /* transform: rotate(90deg); */
      height: 100%;
      width: 100%;
      bottom: 0;
    }
  }
  &__bg {
    position: absolute;
    bottom: -50px;
    right: 0;
    width: 786px;
    height: 641px;
    z-index: -1;
  }
}