script(type="text/x-template")#skills-list
  .skills__metrics
    ul.metrics
      li.metrics__child(
        v-for="category in categories"
        :key="category.id"
      )
        skills-row(
          :category="category"
          :skills="filterSkillsByCategoryId(category.id)"
        )
        

script(type="text/x-template")#skills-row
  .metrics__row
    h3.metrics__title {{category.category}}
    ul.metrics__list
      li.metrics__list-child(
        v-for="skill in skills"
      )
        skill(
          :skillName="skill.title"
          :skillPercent="skill.percent"
        )

script(type="text/x-template")#skill
  .metrics__list-item
    svg(viewBox="0 0 160 160" preserveAspectRatio="none").metrics__list-shape
      circle( r="65" cx="80" cy="80" ).metrics__circle.metrics__circle_before
      circle( stroke="url(#status)" width="100%" height="100%" r="65" cx="80" cy="80" ref="color-circle").metrics__circle.metrics__circle_after
      linearGradient(id="status")
        stop(offset="0%" stop-color="#0089f2")
        stop(offset="100%" stop-color="#003dea")
    .metrics__list-title {{skillName}}